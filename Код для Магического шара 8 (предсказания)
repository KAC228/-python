import random

answers = ["Бесспорно", "Мне кажется - да",	"Пока неясно, попробуй снова",	"Даже не думай",
"Предрешено",	"Вероятнее всего",	"Спроси позже",	"Мой ответ - нет",
"Никаких сомнений",	"Хорошие перспективы",	"Лучше не рассказывать",	"По моим данным - нет",
"Определённо да",	"Знаки говорят - да",	"Сейчас нельзя предсказать",	"Перспективы не очень хорошие",
"Можешь быть уверен в этом"	"Да", "концентрируйся и спроси опять", "Весьма сомнительно"]

name = input("Привет, как тебя зовут?\n")
print(f"\n{name}, я магический шар, и я знаю ответ на любой твой вопрос.")

flag = True
while flag:
    input("Задай вопрос, который тебя интересует!\n")
    print(random.choice(answers))
    if input("Продлжим?\n").lower()  == 'да':
        flag = True
    else:
        flag = False
